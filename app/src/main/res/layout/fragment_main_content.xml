<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/jejuhallasan"
        android:text="@string/app_name"
        android:textColor="#FF5F4B82"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_set" />

    <ImageView
        android:id="@+id/img_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/ic_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_start"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:layout_marginTop="183dp"
        android:background="@drawable/bg_start"
        android:gravity="center"
        android:text="Start"
        android:textStyle="bold"
        android:textColor="#FF614479"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_set" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_b"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_draw"
            android:layout_width="152dp"
            android:layout_height="88dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_main_but"
            android:gravity="center"
            android:text="Mirror Draw"
            android:textColor="#FF614479"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_gallery"
            android:layout_width="152dp"
            android:layout_height="88dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/bg_main_but"
            android:gravity="center"
            android:text="Gallery"
            android:textColor="#FF614479"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center_horizontal|bottom"
        android:background="#B3000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20sp"
            android:background="@drawable/bg_main_dialog">
            <TextView
                android:id="@+id/tv_land"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="Landscape Mode"
                android:textColor="#FF614479"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_portrait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="Portrait Mode"
                android:textColor="#FF614479"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>